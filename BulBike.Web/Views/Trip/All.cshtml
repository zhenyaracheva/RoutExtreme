
<div class="container">
    <div>
        <div class="row">
            <div>
                <h1 class="col m12 center">List all trips</h1>
            </div>
        </div>
        <div class="row">
            <div class="col m4 center">
                Filter by date
            </div>
            <div class="col m4 center">
                Sort by creator
            </div>
            <div class="col m4 center">
                Filter by page
            </div>
        </div>
    </div>
    <br />
</div>

@(Html
    .Kendo()
    .Grid<BulBike.Web.Models.TripViewModels.TripResponseModel>()
    .Name("sfkjagohsh")
    .Columns(columns =>
    {
        columns.Bound(col => col.Creator);
        columns.Bound(col => col.CreatedOn);
        columns.Bound(col => col.Participants);
        columns.Bound(col => col.Route);
    }

))

@section scripts{
    @Scripts.Render("~/bundles/kendojs")
}