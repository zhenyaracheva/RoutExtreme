@model BulBike.Web.Models.TripViewModels.TripRequestModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Trip", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="map-container">
        <div id="map"></div>
    </div>
    @Html.EditorFor(m=>m.Description) 
    @Html.EditorFor(m=>m.StartDate)  
    <div class="col-md-10">
        @Html.HiddenFor(m => m.Route, new { @class = "form-control", id = "routePoints" })
    </div>
    <div class="row">
        <div class="col-md-5 col-md-offset-2">
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
}

@section scripts{
    @Scripts.Render("~/Scripts/Maps/map.js");
    @Scripts.Render("https://maps.googleapis.com/maps/api/js?key=AIzaSyA0EBUP2Baj7_5yrdf3hoQ4xXf86EaoPIU&callback=initMap")
    <script>
        $('.datepicker').pickadate({
            selectMonths: true, // Creates a dropdown to control month
            selectYears: 15 // Creates a dropdown of 15 years to control year
        });
    </script>
}
