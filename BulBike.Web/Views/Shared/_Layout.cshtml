<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BulBike</title>
    @Styles.Render("http://fonts.googleapis.com/icon?family=Material+Icons")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a href="#!">
                @Html.ActionLink("BulBike", "Index", "Home", new { area = "" }, new { @class = "brand-logo" })
            </a>
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
            <ul class="hide-on-med-and-down move">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            <ul class="hide-on-med-and-down right">
                @Html.Partial("_LoginPartial")
            </ul>
            <ul class="side-nav right" id="mobile-demo">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </nav>
    <main>
        <div class="container body-content">
            @RenderBody()
        </div>
    </main>

    <footer class="page-footer">
        <div class="footer-copyright center">
            <p>&copy; @DateTime.Now.Year - BulBike</p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materialize")
    @Scripts.Render("~/bundles/chat");

    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $(".button-collapse").sideNav();
            $("#mobile-demo li img").css("display", "none");
        })
    </script>
</body>
</html>
