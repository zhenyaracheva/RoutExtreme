@model BulBike.Web.Models.Comments.CommentInputModel

@using (Html.BeginForm("AddComment", "Trip", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.EditorFor(m => m.Content)
    @Html.HiddenFor(m => m.TripId, new { id = "tripId" })

    <div class="row">
        <div class="col-md-5 col-md-offset-2">
            <input type="submit" class="btn btn-default" onclick="addToChat" id="create" />
        </div>
    </div>
}
@section scripts{
    <script>
        var url = document.URL;
        var id = url.substring(url.lastIndexOf('/') + 1);
        $('#tripId').val(id);
    </script>
}


